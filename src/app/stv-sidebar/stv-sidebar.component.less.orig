.sidebar-tabs {
    height: 40px;
    >ul {
        display: flex;
        list-style-type: none;
        height: 100%;
        
        li {
            height: 100%;
            display: inline-flex;
            padding: 0 10px 3px 10px;
            align-items: center;
            font-weight: bold;
            opacity: 0.5;
            transition: opacity 0.2s ease;
            cursor: pointer;
            border-top: 3px solid transparent;
            user-select: none;
            
            &:hover {
                opacity: 1;
            }
            
            &.active {
                opacity: 1;
                background: transparent;
                color: @themeColor;
                border-top-color: @themeColor;
            }
        }
    }
}
